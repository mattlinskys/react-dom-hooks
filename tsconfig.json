{
  "compilerOptions": {
    "target": "es6",
    "lib": ["ES2015", "DOM"],
    "module": "ES2020",
    "jsx": "preserve",
    "rootDir": "./src",
    "baseUrl": "./src",
    "declaration": true,
    "sourceMap": true,
    "outDir": "./lib/esm",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true
  },
  "include": ["./src"],
  "exclude": ["node_modules", "./src/stories"]
}
